<EditForm Model="Theater" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <div class="form-group">
        <label>Name:</label>
        <div>
            <InputText class="form-control" @bind-Value="@Theater.Name" />
            <ValidationMessage For="@(() => Theater.Name)" />
        </div>
        <label>Address:</label>
        <div>
            <InputText class="form-control" @bind-Value="@Theater.Address" />
            <ValidationMessage For="@(() => Theater.Address)" />
        </div>
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
</EditForm>

@code {

    [Parameter]
    public Theater Theater { get; set; }

    [Parameter]
    public EventCallback OnValidSubmit { get; set; }
}